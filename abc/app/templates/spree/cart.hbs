<div class="row">
  <div class="small-12 columns">
    <h1>Cart</h1>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    {{#if spree.currentOrder.lineItems.length}}
      {{spree-lineitems lineItems=spree.currentOrder.lineItems}}
      {{spree-details order=spree.currentOrder}}
      {{#link-to 'spree.products.index'}}
        <button>Keep Shopping</button>
      {{/link-to}}
      {{#link-to 'spree.checkout.index'}}
        <button>Checkout</button>
      {{/link-to}}
      <button {{action 'serializeCurrentOrder' target='spree'}}>Test Order Serializer</button>
    {{else}}
      <h1>Your cart is empty.</h1>
      {{#link-to 'spree.products.index'}}
        <button>Keep Shopping</button>
      {{/link-to}}
    {{/if}}
  </div>
</div>
