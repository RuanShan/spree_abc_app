<div class="row">
  <div class="small-12 columns">
    <h1>Checkout</h1>
  </div>

  {{#unless spree.currentOrder.isComplete}}
    <div class="small-12 columns">
      {{spree-breadcrumbs checkoutState=currentCheckoutState checkoutSteps=spree.currentOrder.checkoutSteps}}
    </div>
  {{/unless}}

  <div class="small-12 large-4 columns right">
    {{spree-details order=spree.currentOrder}}
  </div>

  <div class="small-12 large-8 columns">
    {{outlet}}
  </div>
</div>